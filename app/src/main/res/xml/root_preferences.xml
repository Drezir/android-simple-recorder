<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/audio">
        <ListPreference
            app:defaultValue="0"
            app:entries="@array/audio_formats"
            app:entryValues="@array/audio_format_values"
            app:key="audioFormat"
            app:title="@string/audio_title"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="0"
            app:entries="@array/audio_encoders"
            app:entryValues="@array/audio_encoders_values"
            app:key="audioEncoder"
            app:title="@string/audio_encoder"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>